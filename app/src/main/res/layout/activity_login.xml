<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:id="@+id/main"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="670dp"
        android:background="@drawable/login3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/login1"
        android:orientation="vertical"
        android:src="@color/white">

        <TextView
            android:id="@+id/texv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/texv2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="  Username"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editt1"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Type your username"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/texv3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="  Password"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editt2"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Type your password"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/texv4"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="174dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Forgot password?"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <Button
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGIN"
            android:onClick="Login"
            android:layout_marginTop="20dp"
            android:background="@drawable/login2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/texv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Don't have an account yet?"
            android:layout_marginTop="140dp" />

        <Button
            android:id="@+id/but2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:onClick="SignUp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="12dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv3slider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hope"
        android:textColor="#f5fffa"
        android:textSize="20dp"
        android:paddingTop="700dp"
        android:gravity="center"
        android:paddingRight="36dp"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/aloja"/>

    <ImageView
        android:id="@+id/image01"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ghosttcudie" />

    <ImageView
        android:id="@+id/image02"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ghosttcudiee" />

</RelativeLayout>